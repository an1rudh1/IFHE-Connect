<% layout('layouts/boilerplate') %>
<div class="container mt-5">
  <h2>Edit Sport Listing</h2>
  <form action="/sports/<%= sport._id %>?_method=PUT" method="POST">
    <div class="mb-3">
      <label>Sport Type</label>
      <input
        type="text"
        name="sportType"
        class="form-control"
        value="<%= sport.sportType %>"
        required
      />
    </div>
    <div class="mb-3">
      <label>Location</label>
      <input
        type="text"
        name="location"
        class="form-control"
        value="<%= sport.location %>"
        required
      />
    </div>
    <!-- Date and time -->
<div class="mb-3">
  <label>Date </label>
  <input type="date" name="date" required />
  <label>Time</label>
<input type="time" name="time" required />

</div>

    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a href="/sports" class="btn btn-secondary">Cancel</a>
  </form>
</div>
